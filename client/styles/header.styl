.header
  height 60px
  width 100%

  .paper
    height 100%
    width 100%

    .timer-bar
      display none
      height 30px
      background-color #26a69a

      .timer
        text-align center
        color #ffffff
        line-height 30px

    .menu
      width 100%
      height 60px

      .logo
        height 60px
        width 60px
        background-image url(/images/logo.png)
        background-size cover
        background-repeat no-repeat
        display inline-block
        position absolute
        top 3px
        left 15px

      .company-name
        display inline-block
        height 100% !important

        div > span
          font-size 15px !important
          padding-left 85px !important
          color #0b767a

      .header-link
        float right
        height 100% !important

        div > span
          font-size 12px !important

.header.testmode
  height 90px

  .paper >.timer-bar
    display block













