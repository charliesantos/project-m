.header
  height 60px
  width 100%

  .paper
    height 100%
    width 100%
    padding 0px 25px

    .logo
      height 60px
      width 60px
      background-image url(/images/logo.png)
      background-size cover
      background-repeat no-repeat
      display inline-block
      position absolute
      top 3px

    .company-name
      display inline-block
      height 100% !important

      div > span
        font-size 12px !important
        padding-left 70px !important

    .header-link
      float right
      height 100% !important

      div > span
        font-size 12px !important